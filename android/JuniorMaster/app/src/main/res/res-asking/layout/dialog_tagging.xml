<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="問題已經順利的發送出去了！" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/half_vertical_margin"
        android:text="只要再加上一些標籤就更完美了。" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/half_vertical_margin"
        android:text="請選擇一些下面的標籤：(可以複選)" />

    <com.tinystartup.juniormaster.activity.common.TaggingLayout
        android:id="@+id/tags"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/half_vertical_margin"
        android:layout_marginBottom="@dimen/half_vertical_margin"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
    </com.tinystartup.juniormaster.activity.common.TaggingLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="完成"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/button" />

</LinearLayout>